                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <androidx.cardview.widget.CardView
                     android:layout_width="132dp"
                     android:layout_height="176dp"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
                     app:cardBackgroundColor="#FFFFFF"
                     app:cardCornerRadius="8dp"
                     app:cardElevation="0dp">

                     <ImageView
                         android:layout_gravity="center"
                         android:src="@drawable/live_class_teacher_img_1"
                         android:layout_width="132dp"
                         android:layout_height="176dp"/>
                 </androidx.cardview.widget.CardView>

                 <TextView
                     android:layout_marginBottom="8dp"
                     android:textColor="#000000"
                     android:fontFamily="@font/poppins_regular"
                     android:textSize="14sp"
                     android:layout_marginTop="8dp"
                     android:layout_marginLeft="16dp"
                     android:text="Minaj Parvin"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </LinearLayout>
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <androidx.cardview.widget.CardView
                     android:layout_width="132dp"
                     android:layout_height="176dp"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
                     app:cardBackgroundColor="#FFFFFF"
                     app:cardCornerRadius="8dp"
                     app:cardElevation="0dp">

                     <ImageView
                         android:layout_gravity="center"
                         android:src="@drawable/live_class_teacher_img_2"
                         android:layout_width="132dp"
                         android:layout_height="176dp"/>
                 </androidx.cardview.widget.CardView>

                 <TextView
                     android:layout_marginBottom="8dp"
                     android:textColor="#000000"
                     android:fontFamily="@font/poppins_regular"
                     android:textSize="14sp"
                     android:layout_marginTop="8dp"
                     android:layout_marginLeft="16dp"
                     android:text="Shourov Alam"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </LinearLayout>
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <androidx.cardview.widget.CardView
                     android:layout_width="132dp"
                     android:layout_height="176dp"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
                     app:cardBackgroundColor="#FFFFFF"
                     app:cardCornerRadius="8dp"
                     app:cardElevation="0dp">

                     <ImageView
                         android:layout_gravity="center"
                         android:src="@drawable/live_class_teacher_img_2"
                         android:layout_width="132dp"
                         android:layout_height="176dp"/>
                 </androidx.cardview.widget.CardView>

                 <TextView
                     android:layout_marginBottom="8dp"
                     android:textColor="#000000"
                     android:fontFamily="@font/poppins_regular"
                     android:textSize="14sp"
                     android:layout_marginTop="8dp"
                     android:layout_marginLeft="16dp"
                     android:text="Parvez Alam"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/live_class_details_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="74dp"
            app:cardBackgroundColor="#8483f3"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="FREE Live Classes"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Online tutions by the best teachers live doubt solving and one-to-one solution"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:textAllCaps="true"
                    android:layout_width="167dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Book a free class"
                    android:textColor="@color/white"
                    android:textFontWeight="500"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="4dp"
                android:src="@drawable/live_class_home_icon" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </ScrollView>
