<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubjectDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:background="#e5e8f7"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/live_class_back_Id"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/live_class_menu_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="20sp"
                        android:textFontWeight="600"
                        android:textColor="#53A9FF"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Mathematics"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#212121"
                            android:fontFamily="@font/poppins_regular"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:layout_marginStart="16dp"
                            android:text="23 Chapters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/live_class_circle"
                            android:layout_width="4dp"
                            android:layout_height="4dp"/>

                        <TextView
                            android:textColor="#212121"
                            android:fontFamily="@font/poppins_regular"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:layout_marginStart="12dp"
                            android:text="103 Lessons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/math_icon_subject_detail"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>