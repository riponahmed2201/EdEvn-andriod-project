<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f5f9"
    android:orientation="vertical"
    tools:context=".Activity.UpdateProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_menu_tool_bar_id"
        android:layout_width="match_parent"
        android:background="#e6e9f7"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/update_profile_back_btn_id"
                android:layout_gravity="center"
                android:src="@drawable/live_class_menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="25sp"
                android:textColor="#9C27B0"
                android:fontFamily="@font/poppins_regular"
                android:textAllCaps="true"
                android:layout_marginStart="40dp"
                android:layout_gravity="center"
                android:text="Update Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_full_name_id"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:background="@drawable/update_profile_edit_text"
            android:gravity="center"
            android:textColorHint="#9C27B0"
            android:layout_marginTop="10dp"
            android:hint="Full name"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="280dp"
            android:layout_height="48dp"/>

        <EditText
            android:id="@+id/et_email_address_id"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:background="@drawable/update_profile_edit_text"
            android:gravity="center"
            android:textColorHint="#9C27B0"
            android:layout_marginTop="10dp"
            android:hint="Email address"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="280dp"
            android:layout_height="48dp"/>

        <EditText
            android:id="@+id/et_phone_number_id"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:background="@drawable/update_profile_edit_text"
            android:gravity="center"
            android:textColorHint="#9C27B0"
            android:layout_marginTop="10dp"
            android:hint="Phone number"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="280dp"
            android:layout_height="48dp"/>

        <Button
            android:textColor="@color/white"
            android:textAlignment="center"
            android:id="@+id/profile_update_btn_id"
            android:background="@drawable/login_continue_button"
            android:text="Update Profile"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="280dp"
            android:layout_height="41dp"/>
    </LinearLayout>


</LinearLayout>