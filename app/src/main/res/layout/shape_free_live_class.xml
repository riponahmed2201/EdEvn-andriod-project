<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_marginTop="26dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/free_live_class_image_id"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/math_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/free_live_class_subject_name_id"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="10sp"
                        android:textFontWeight="600"
                        android:textColor="#53A9FF"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Mathematics"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/free_live_class_chapter_name_id"
                        android:textFontWeight="500"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:layout_marginRight="27dp"
                        android:layout_marginStart="16dp"
                        android:text="Introduction to Matmatics"
                        android:layout_width="189dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/free_live_class_total_seat_left_id"
                    android:textColor="#212121"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:text="27 Seats left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/live_class_circle"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <TextView
                    android:id="@+id/free_live_class_class_time_id"
                    android:textColor="#212121"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:layout_marginStart="12dp"
                    android:text="Tommorow, 5: 30 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/live_class_circle"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <TextView
                    android:id="@+id/free_live_class_duration_id"
                    android:textColor="#212121"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:layout_marginStart="12dp"
                    android:text="1HR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_marginTop="16dp"
                android:background="#ebebeb"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/book_now_id"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textFontWeight="600"
                    android:textColor="#6C6BE1"
                    android:textSize="14sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="15dp"
                    android:textAllCaps="true"
                    android:text="Book Now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="230dp"
                    android:backgroundTint="#6C6BE1"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/ic_arrow_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>