<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f5f9"
    android:orientation="vertical"
    tools:context=".Activity.FreeLiveClassActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:background="#e6e9f7"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/live_class_back_Id"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:src="@drawable/live_class_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

<!--        <ImageView-->
<!--            android:layout_marginStart="16dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:src="@drawable/home_menu_title"-->
<!--            android:layout_width="88dp"-->
<!--            android:layout_height="43dp"/>-->

        <TextView
            android:text=" FREE Live Classes"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:textFontWeight="500"
            android:lineHeight="24dp"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:textColor="#6C6BE1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="#f87a78"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Book A Free Class"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="17dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/live_class_free_class_description_text"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/free_live_class_list_recycler_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
<!--    </ScrollView>-->

</LinearLayout>