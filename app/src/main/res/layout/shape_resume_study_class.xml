<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/all_resume_study_list"
        android:layout_width="216dp"
        android:layout_height="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="216dp"
            android:layout_height="240dp"
            android:background="@color/white"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/resume_math_subject_image"
                android:layout_width="216dp"
                android:layout_height="121dp"
                android:background="@drawable/resume_study_bg_image"
                android:src="@drawable/math_image" />

            <TextView
                android:id="@+id/resume_math_subject_name"
                android:layout_width="184dp"
                android:layout_height="15dp"
                android:layout_below="@+id/resume_math_subject_image"
                android:layout_marginLeft="16.5dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_regular"
                android:lineHeight="16dp"
                android:text="Mathematics"
                android:textAllCaps="true"
                android:textColor="#53A9FF"
                android:textFontWeight="600"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/resume_math_subject_description"
                android:layout_width="184dp"
                android:layout_height="57dp"
                android:layout_below="@+id/resume_math_subject_name"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Understanding Numbers"
                android:textColor="#212121"
                android:textFontWeight="500"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/resume_math_subject_lesson"
                android:layout_width="108dp"
                android:layout_height="16dp"
                android:layout_below="@+id/resume_math_subject_description"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_regular"
                android:text="2 of 8 Lessons"
                android:textColor="#212121"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/math_progressBarId"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="48dp"
                android:layout_height="8dp"
                android:layout_below="@+id/resume_math_subject_description"
                android:layout_alignRight="@+id/resume_math_subject_lession"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/home_progress_bar"
                android:progress="50" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>